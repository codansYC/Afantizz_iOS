# Uncomment the next line to define a global platform for your project
# platform :ios, ‘8.0’

target 'Afantizz' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

    pod 'SnapKit', '~> 4.0.0'    #自动布局
    pod 'Alamofire', '~> 4.6.0'     #HTTP请求
    pod 'AlamofireNetworkActivityIndicator', '~> 2.2.0' #菊花
    pod 'RxSwift',    '~> 4.0.0'    #响应式编程
    pod 'RxCocoa',    '~> 4.0.0'
    pod 'SDWebImage', '~>4.2.2'     #网络图片处理
    pod 'Kingfisher', '~> 4.5.0'    #网络图片处理
    pod 'IQKeyboardManagerSwift', '~> 5.0.7' #自适应键盘高度
    pod 'FCUUID', '~> 1.3.1' #uuid
    pod 'MJRefresh' #刷新
    pod 'CryptoSwift'  # 加密
    pod 'AMap2DMap' #2D地图SDK(2D地图和3D地图不能同时使用)
    pod 'AMapLocation' #高德地图-定位SDK
    pod 'AMapSearch' #搜索服务SDK
    pod 'SDCycleScrollView','~> 1.75' # 图片轮播器
    pod 'NJKWebViewProgress' #web view进度条
    pod 'WZLBadge' #红点
    pod 'ActionSheetPicker-3.0' #picker
    pod 'Fabric' #数据分析
    pod 'Crashlytics' #崩溃分析
    pod 'MBProgressHUD' #活动指示器
    pod 'UIDeviceIdentifier' #设备型号
    pod 'ReachabilitySwift', '~> 4.1.0' #网络状态
    pod 'KMPlaceholderTextView'
    pod 'SwiftyJSON', :git => 'https://github.com/SwiftyJSON/SwiftyJSON.git'
    pod 'HandyJSON', '~> 4.0.0-beta.1' #数据解析
    pod 'NJKWebViewProgress' # Web视图进度条
    pod 'Reveal-SDK', '~> 4', :configurations => ['Debug'] # reveal
    pod 'KMNavigationBarTransition' # 导航栏
    pod 'WechatOpenSDK'             # 微信SDK

end
